<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="service.firecube_lightbar"
       version="1.0.0"
       name="Fire Cube Lightbar"
       provider-name="pro-me3us">
    <requires>
        <import addon="xbmc.python" version="3.0.0" />
    </requires>
    <!-- Define the service -->
    <extension point="xbmc.service" library="service.py">
        <provides>service</provides>
    </extension>
    <!-- Define the script for manual execution -->
    <extension point="xbmc.python.script" library="default.py">
        <provides>script</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>Set LED color and animations</summary>
        <description>Allows control of the FireTV Cube LED color & animations.</description>
        <platform>all</platform>
        <assets>
            <icon>resources/icon.png</icon>
            <fanart>resources/fanart.png</fanart>
        </assets>
        <settings>
            <setting file="resources/settings.xml" />
        </settings>
    </extension>
</addon>

